@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    table,th,td{
        border:2px solid black;
        border-collapse:collapse;
        font-size:40px
    }
</style>
<div class="text-center">
    <h1 class="display-4">Score= @Model.score</h1>
</div>
<form asp-page-handler="Play" method="post">
    Max number
    <input type="number" asp-for="max" />
    Number of rows
    <input type="number" asp-for="rows" />
    Number of columns

    <input type="number" asp-for="columns"/>
    Number of draws
    <input type="number" asp-for="draws"/>
    <button type="submit">Play</button>
</form>

<div>
    Card:
</div>
<table>
    @{
        for(int i=0;i<@Model.rows;i++)
        {
                            <tr></tr>
            for(int j=0;j<@Model.columns;j++)
            {
                if (!@Model.game.ReturnN(i, j).marked)
                {
                                    <td>@Model.game.ReturnN(i,j).number </td>
                }
                if (@Model.game.ReturnN(i, j).marked)
                {
                                    <td style="background-color:red">@Model.game.ReturnN(i,j).number </td>
                }
            }
        
        }
    }
</table> 
   
